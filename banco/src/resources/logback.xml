<configuration>
    <appender name="saidaPadrao" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.algaworks.banco_app.negocio" level="TRACE" />

    <root level="INFO">
        <appender-ref ref="saidaPadrao" />
    </root>
</configuration>